<!-- 把这个页面纳入  main 框架里面   -->
{{!< main}}

<style>
    .slotImg1{
        width : 261px;
        height : 159px;
    }
    .slotImg2{
        width : 200px;
        height : 78px;
    }
</style>

<h2>{{typeStr}}</h2>
<a href="/slotImage/one/{{type}}/add/-1" class="btn btn-default active" role="button">添加新的广告图片</a>
<div id="productTabContent" class="tab-content">
    <div class="tab-pane fade in active" id="productTable">
        <div class="row">
            <div class="box col-md-12">
                <div class="box-inner">
                    <div class="box-content">
                        <table class="table table-striped table-bordered bootstrap-datatable responsive">
                            <thead>
                            <tr>
                                <th width="270px" style="text-align:center;vertical-align:middle;">图片</th>
                                <th width="480px" style="text-align:center;vertical-align:middle;">跳转链接</th>
                                <th width="60px" style="text-align:center;vertical-align:middle;">操作</th>
                            </tr>
                            </thead>
                            <tbody id="dataTbody">
                                {{#each data.slotImageList}}
                                    <tr>
                                        <td style="text-align:center;vertical-align:middle;"><img class="slotImg{{type}}" src="http://120.24.153.102:3000/system/v1/jfs_image/{{imgKey}}"/></td>
                                        <td style="text-align:center;vertical-align:middle;"><a href="{{jump}}" target="_blank">{{jump}}</a></td>
                                        <td style="text-align:center;vertical-align:middle;">
                                            <a href="/slotImage/one/{{type}}/update/{{id}}">修改</a>
                                            <br>
                                            <a href="/slotImage/delete/{{type}}/{{id}}">删除</a>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
